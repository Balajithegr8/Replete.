<!DOCTYPE html>
<!-- Designed and Developed by Team ClichÃ© Cookies-->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, height=device-height">
    <title>Replete | Home</title>

    <!-- CSS -->
    <link rel="stylesheet" href="../css/restaurantSide.css">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>
    <div class="navbar">
        <div class="container">
            <a class ="logo" href="#">Replete.</a>
            <nav>
                <ul class="primary-nav">
                    <div class="primary-nav2">
                        <li class="current"><a href="#" id="Home">Home</a></li>
                        <li><a href="#" id="Profile" onclick="gotoProfile()">Profile</a></li>
                        <li><a href="#" id="Donations" onclick="gotoDonations()">Donations</a></li>
                    </div>
                </ul>
            </nav>
        </div>
    </div>

    <section class="hero">
        <div class="contain">
            <h1 class="subhead">Welcome, Restaurant</h1>
            <div class="topnav-container">
                <input class="topnav" type="text" placeholder="Search for an Organisation">
            </div>

            <div class="primary-button">
                <a href="#" id="primary-cta" onclick="donationMade()">Donate Now</a>
            </div>
        </div>
    </section>

    <section class="contact-section">
        <div class="container-contact">
            <div class="contact-center">
                <h2>Contact Us</h2>

                <form action="">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Your Name">

                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" placeholder="Your Email">

                    <label for="message">Message</label>
                    <textarea name="message" id="message" cols="30" rows="10"></textarea>

                   </form>
                   <div>
                        <a href="#contact-section" id="submit-cta" onclick="sent()" class="send-button">Send</a>
                   </div>
            </div>
        </div>
    </section>
</body> 

<script>
    function donationMade(){
        document.getElementById("primary-cta").style.background = "#4d9939"
        document.getElementById("primary-cta").style.borderColor = "#4d9939"
    }
    function sent(){
        document.getElementById("submit-cta").style.background = "#4d9939"
        document.getElementById("submit-cta").style.borderColor = "#4d9939"
    }
    function gotoProfile() {
        fetch("/restaurantProfile", {
            "method" : "GET"
        }).success(location.href = "/restaurantProfile")
    }
    function gotoDonations() {
        fetch("/restaurantDonation", {
            "method" : "GET"
        }).success(location.href = "/restaurantDonation")
    }
</script>

</html>
